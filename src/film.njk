---
layout: zakladni
pagination:
  data: filmy
  size: 1
  alias: film
permalink: "/film/{{ film.nazev | slug }}/"
---

<div class="film">
  <div class="film-levy-sloupec">
    <h2>{{ film.nazev }}</h2>
      <div class="film-podrobnosti">
        <p class="film-data">Rok:</p><p>{{ film.rok }}</p>
        <p class="film-data">Země:</p><p>{{ film.zeme | join(', ') }}</p>
        <p class="film-data">Žánr:</p><p>{{ film.zanr | join(', ') }}</p>
        <p class="film-data">Délka:</p><p>{{ film.delka }} minut</p>
      </div>

    <div class="film-obsah">
        <h2>Obsah</h2>
          <p class="film-obsah__popis">{{ film.obsah.text }}</p>
    </div>
  </div>
  <div class="film-pravy-sloupec">
    <img src="{{ film. plakat.url }}" alt="plakát {{ film.nazev }}"/>
    <div>
      <h2>Hodnocení</h2>

      {% if film.hodnoceni == 5 %}
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
      {% elif film.hodnoceni == 4 %}
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
      {% elif film.hodnoceni == 3 %}
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">  
      {% elif film.hodnoceni == 2 %}
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
      {% else %}
        <img src="/obrazky/hvezda-vyplnena.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
        <img src="/obrazky/hvezda-prazdna.svg" alt="hodnocení filmu">
      {% endif %}
        <div>
          
        </div>
    </div>

  {% if film.souvisejici | length > 1 %}
    <div>
      <h2>Související filmy</h2>
    </div>
  {% endif %}


  </div>
</div>